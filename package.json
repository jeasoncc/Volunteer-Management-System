{
  "name": "lianhuazhai-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "莲花斋义工管理系统 - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "bash check-db.sh",
    "dev": "turbo run dev",
    "dev:studio": "turbo run dev & (lsof -ti:4983 | xargs kill -9 2>/dev/null; cd apps/api && npm run studio)",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "test:login": "bash test-login.sh",
    "check:db": "bash check-db.sh",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0"
}
