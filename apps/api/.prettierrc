{
  "$schema": "https://json.schemastore.org/prettierrc",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^elysia$",
    "^@elysiajs/(.*)$",
    "^@bun(.*)$",
    "",
    "^@config/(.*)$",
    "^@constants/(.*)$",
    "^@types/(.*)$",
    "^@utils/(.*)$",
    "^@middleware/(.*)$",
    "^@services/(.*)$",
    "^@controllers/(.*)$",
    "^@routes/(.*)$",
    "",
    "^@/(.*)$",
    "^[./]",
    "^[../]",
    ".*\\.(css|scss|less)$"
  ],
  "importOrderCaseInsensitive": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": ["*.json", "*.json5"],
      "options": {
        "singleQuote": false,
        "printWidth": 80,
        "quoteProps": "preserve",
        "trailingComma": "none"
      }
    },
    {
      "files": ["routes/**/*.ts"],
      "options": {
        "printWidth": 110,
        "importOrder": [
          "^elysia$",
          "^@elysiajs/(.*)$",
          "<THIRD_PARTY_MODULES>",
          "^@controllers/(.*)$",
          "^@middleware/(.*)$",
          "^@/(.*)$",
          "^[./]"
        ]
      }
    },
    {
      "files": ["*.d.ts"],
      "options": {
        "semi": true,
        "importOrderSeparation": false
      }
    },
    {
      "files": ["*.test.ts", "*.spec.ts"],
      "options": {
        "importOrder": [
          "<THIRD_PARTY_MODULES>",
          "^elysia$",
          "^@elysiajs/(.*)$",
          "^@test/(.*)$",
          "^@/(.*)$",
          "^[./]"
        ]
      }
    }
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-jsdoc",
    "@huggingface/prettier-plugin-vertical-align",
    "prettier-plugin-packagejson",
    "prettier-plugin-sort-json"
  ],
  "printWidth": 100,
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
